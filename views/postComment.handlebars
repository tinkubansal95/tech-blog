<div class="container" id="basicContainer">
  <div class="list-group">
    <div class="py-4 px-2">
      <a href="#" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h4 class="mb-1">{{post.title}}</h4>
          <small class="text-muted">Posted by
            {{post.user.username}}
            on
            {{post.publishedAt}}</small>
        </div>
        <p class="mb-1">{{post.content}}</p>
      </a>
      <button type="button" class="btn btn-dark mt-4">Comments</button>
      <button
        type="button"
        class="btn btn-dark mt-4 float-right"
        data-toggle="modal"
        data-target="#myModal"
      >Post Comment</button>

      <!-- Modal -->
      <div
        class="modal fade"
        id="myModal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="modalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalLabel">Post Comment</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="content" class="col-form-label">Comment</label>
                  <textarea class="form-control" id="content"></textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-dark"
                data-dismiss="modal"
              >Close</button>
              <button type="button" class="btn btn-dark" id="postComment">Post
                Comment</button>
            </div>
          </div>
        </div>
      </div>

      <div class="list-group pt-3">
        {{#each commentsData as |comment|}}
          <div class="p-2">
            <a href="#" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <p class="mb-1">{{comment.content}}</p>

              </div>
              <small class="text-muted">Posted by
                {{comment.user.username}}
                on
                {{comment.publishedAt}}</small>
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script src="/js/postComment.js"></script>